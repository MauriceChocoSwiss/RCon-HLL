<Window x:Name="MainWindowPage" x:Class="RCon_Plus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCon_Plus"
        mc:Ignorable="d"
        Title="Na+ Sodium Rcon Client" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="Manual">
    <DockPanel x:Name="MainContainer" Height="auto" Width="auto">
        <TextBlock Text="Infos du logiciel et disclaimer" TextWrapping="Wrap" Width="auto" DockPanel.Dock="Bottom" />
        <StackPanel x:Name="ServerPanel" DockPanel.Dock="Top" Height="40" Orientation="Horizontal">
        </StackPanel>
        <DockPanel DockPanel.Dock="Right" Height="625">
            <TabControl x:Name="MainTabControl" BorderBrush="#FF6A6A6A" BorderThickness="1,1,1,1" ClipToBounds="True" Height="625">
                <TabItem x:Name="PlayerControlTabItem" Header="Players Control"></TabItem>
                <TabItem x:Name="SettingsTabItem" Header="Settings"></TabItem>
                <TabItem x:Name="LogTabItem" Header="Logs"></TabItem>
            </TabControl>
        </DockPanel>

    </DockPanel>
</Window>
