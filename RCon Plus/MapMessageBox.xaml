<Window x:Name="MapsmessageBox" x:Class="RCon_Plus.MapMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCon_Plus"
        mc:Ignorable="d"
        Title="Action for Map" Height="100" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Closing="ClosingEvent">
    <Grid>
        <TextBlock x:Name="nameMap" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,16,0,0"/>
        <Button x:Name="SetButton" Content="Set Map Now" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Click="SetButton_Click"/>
        <Button x:Name="AddToRotation" Content="Add Map to rotation" Margin="0,54,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="113" Click="AddToRotation_Click"/>

    </Grid>
</Window>
